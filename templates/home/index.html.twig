{% block javascripts %}
<script>
    let height = window.innerHeight;
    let width = window.innerWidth;
    let centreh = height / 2 ;

    let iframe = document.querySelector("iframe");
    iframe.height = (height / 2.085714285714286) + "px";

    let span = document.querySelector("div.centre span");
    let i = document.querySelector("div.centre i");
    let section = document.querySelector("section");

    let apparitionMode = 1;
    span.addEventListener("mouseenter", function apparition() {
        if (apparitionMode < 3) {
            section.innerHTML = '<i class="cache">ça doit faire mal...</i>';
            if (apparitionMode == 2) {
                section.innerHTML = '<i class="cache">Avec le coup de tout à l\'heure...</i>';
            }
            let cache = document.querySelector(".cache");
            cache.style.top = centreh + "px";
            apparitionMode++;
        }
    })

    i.addEventListener("mouseenter", function apparition() {
        if (apparitionMode < 3) {
            section.innerHTML = '<i class="cache">ça doit faire mal...</i>';
            if (apparitionMode == 2) {
                section.innerHTML = '<i class="cache">Avec le coup de tout à l\'heure...</i>';
            }
            let cache = document.querySelector(".cache");
            cache.style.top = centreh + "px";
            apparitionMode++;
        }
    })

    span.addEventListener("mouseleave", function disparition() {
        section.innerHTML = "";
    })

    i.addEventListener("mouseleave", function disparition() {
        section.innerHTML = "";
    })
</script>
